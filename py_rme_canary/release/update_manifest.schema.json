{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://py-rme-canary.dev/schemas/update_manifest.schema.json",
  "title": "Py RME Canary Update Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "manifest_version",
    "generated_at",
    "channel",
    "version",
    "security",
    "rollback",
    "assets"
  ],
  "properties": {
    "manifest_version": {
      "type": "integer",
      "minimum": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "channel": {
      "type": "string",
      "enum": [
        "stable",
        "beta",
        "nightly"
      ]
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "manifest_url": {
      "type": [
        "string",
        "null"
      ]
    },
    "security": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "checksums_required",
        "signature"
      ],
      "properties": {
        "checksums_required": {
          "type": "boolean",
          "const": true
        },
        "signature": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required",
            "algorithm",
            "status"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "algorithm": {
              "type": "string"
            },
            "status": {
              "type": "string",
              "enum": [
                "unsigned",
                "signed"
              ]
            }
          }
        }
      }
    },
    "rollback": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled",
        "strategy"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "previous_version": {
          "type": [
            "string",
            "null"
          ]
        },
        "previous_manifest_url": {
          "type": [
            "string",
            "null"
          ]
        },
        "strategy": {
          "type": "string"
        }
      }
    },
    "assets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "size",
          "sha256",
          "download_url"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "size": {
            "type": "integer",
            "minimum": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "download_url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  }
}
