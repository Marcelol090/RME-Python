{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Jules Suggestions Contract",
  "type": "object",
  "required": [
    "version",
    "category",
    "implemented",
    "suggested_next",
    "generated_at"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "category": {
      "type": "string",
      "enum": [
        "quality",
        "security",
        "tests",
        "pipeline",
        "general"
      ]
    },
    "task": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "quality_bundle": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "generated_at": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "implemented": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "summary",
          "files"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "evidence": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "suggested_next": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "severity",
          "summary"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "CRITICAL",
              "HIGH",
              "MED",
              "LOW"
            ]
          },
          "summary": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "links": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
